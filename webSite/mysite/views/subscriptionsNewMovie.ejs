<html>
    <head>

    <style>
div {

  width: 400px;
  border: 5px solid black;
  padding: 20px;
  margin: 20px;
}
</style>
</head>

    <body>
        <h1> Movies - Subscriptions Web Site </h1>
        <a href="http://localhost:3000/movies"><button>Movies</button></a>
        <a href="http://localhost:3000/subscriptions"><button>Subscriptions</button></a>   
            <% if (user) { %>
            <a href="http://localhost:3000/menu/manageUsers"><button>Users Management</button></a>
            <% } %>
         <a href="http://localhost:3000/"><button>Log Out</button></a>
        </br>
        <h1>Subscriptions</h1>
        <a href="http://localhost:3000/subscriptions/"><button>All Members </button></a>
        <a href="http://localhost:3000/subscriptions/edit/?obj=0"><button>Add Members </button></a>
        </br>
        <% data.map( v =>{ %>
<div>
            <h4>  <%=v.Name%> </h4></br>
                <b>Email:</b> <%=v.Email%></br>
                <b>City:</b> <%=v.City%></br>
                <% var obj = JSON.stringify(v) %>
            <dd><a href="http://localhost:3000/subscriptions/edit/?obj=<%= obj%>"><button>Edit</button></a>
                <a href="http://localhost:3000/subscriptions/delete/id=<%= v._id %>ids=idUser""><button>Delete</button></a></dd>
                <h4>  Movies Watched </h4>
                <a href="http://localhost:3000/subscriptions/?obj=<%= obj%>"><button>Subscribe to new movie</button></a></dd>
                <% if (v._id === idUser){ %>
            </br>Add a new movie<br>
              <form action ="/subscriptions/addMovie/?obj=<%= obj%>" method="POST">
                
              
                <select  name="movie" required>
                    <%movies_list.map(v =>{%>
                        <option value="<%=v.id%>"><%=v.Name%></option>
                    <%})%>
                </select>

                <input type="date" name="date">
               <button>Subscribe</button>
            </form>
         <%}%>

                <ul>
                   <% v.movies.map( x => { %>
                    <%var fullDate = x.date%>
                    <%var k = new Date(fullDate)%>
                    
                    <li><u><a href="http://localhost:3000/movies/find/<%=x.Name%>"><%=x.Name%></a></u>,<%=k.getDate()%>/<%=k.getMonth()+1%>/<%=k.getFullYear()%> </li> 
                   <% })%>
                </ul>
            </div>
                <%})%>
    </body>
</html>